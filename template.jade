!!! 5
html(lang='en')
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
  body.site
    p &nbsp;
    .container
      .content
        h1.title= page.title
        if page.date
          p.date= page.date
        if page.show_social
          .head-links
            a(href="http://bit.ly/icdocsoc_fb") Join us on Facebook
            | &nbsp;&nbsp;|&nbsp;&nbsp;
            a(href="http://bit.ly/icdocsoc_twitter") Follow us on Twitter
        hr
        if page.agenda
          section.agenda
            ol
              for item in page.agenda
                li= item

      .main(role='main')
        section.content
          != content
      .content
        hr
        .sponsored-by
          p Sponsored By
          img(src="http://docsoc.s3.amazonaws.com/sponsored_by.png")
    p &nbsp;
